{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@myorg/sales-product-editor": ["libs/sales/product-editor/src/index.ts"],
      "@myorg/sales-products": ["libs/sales/products/src/index.ts"],
      "@myorg/customers-user-editor": [
        "libs/customers/user-editor/src/index.ts"
      ],
      "@myorg/customers-users": ["libs/customers/users/src/index.ts"],
      "@myorg/shared/ng-material": ["libs/branding/ng-material/src/index.ts"],
      "@myorg/shared/layout": ["libs/branding/layout/src/index.ts"],
      "@myorg/shared/logger": ["libs/branding/logger/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
